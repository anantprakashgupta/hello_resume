    <script>
        $(document).ready(function () {
                $('#username').on('input', function () {
                    var userid = $(this).val();

                    $.ajax({
                        url: '/checkUsername',
                        method: 'POST',
                        data: { userid: userid },
                        success: function (response) {
                            if (response.error) {
                                $('#usernameError').text(response.userid + ' ' + response.error + '!');
                                $('#registrationForm input[type="submit"]').prop('disabled', true); // Disable submit button
                            } else {
                                $('#usernameError').text(response.userid + ' ' + response.message + '!');
                                $('#registrationForm input[type="submit"]').prop('disabled', false); // Enable submit button
                            }
                        },
                        error: function (xhr, status, error) {
                            console.error(error);
                        }
                    });
                });
                 function save_data() {

                $('#registrationForm').submit(function (e) {
                    e.preventDefault(); // Prevent form submission

                    var name = $('input[name="name"]').val();
                    var userid = $('input[name="userid"]').val();
                    var email = $('input[name="email"]').val();
                    var mobile = $('input[name="mobile"]').val();
                    var password = $('input[name="password"]').val();

                    if ($('#usernameError').text() === '') {
                        $.ajax({
                            url: '/register',
                            method: 'POST',
                            data: { name: name, userid: userid, email: email, mobile: mobile, password: password },
                            success: function (response) {
                                console.log(response);
                                Swal.fire({
                                    title: 'Success!',
                                    text: 'Registration successful.',
                                    icon: 'success',
                                    showConfirmButton: false,
                                    timer: 1500
                                }).then(function () {
                                    window.location.href = '/login';
                                });
                            },
                            error: function (xhr, status, error) {
                                console.error(error);
                            }
                        });
                    }
                });
            }
            });
        

   </script>
